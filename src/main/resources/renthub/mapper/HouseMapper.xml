<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="renthub.mapper.HouseMapper">
    <select id="findListByQuery" resultType="java.lang.Integer">
        select house.id
        from house
        <if test="pQuery.tag != null and !pQuery.tag.isEmpty()">
            join (
            select house_id
            from house_tag
            where tag_id in
            <foreach item="tagId" collection="pQuery.tag" open="(" separator="," close=")">
                #{tagId}
            </foreach>
            group by house_tag.house_id <!--健壮性防御,防止数据库中有重复tagId-->
            having count(distinct house_tag.tag_id) = #{pQuery.tagSize}
            ) ht on house.id = ht.house_id
        </if>
        <where>
            house.status = 1 <!--只找出 status=1 待租状态的房源-->
            <if test="pQuery.regionId != null">
                and house.region_id = #{pQuery.regionId}
            </if>
            <if test="pQuery.keyword != null and pQuery.keyword != ''">
                and (
                house.title like concat('%', #{pQuery.keyword}, '%')
                or house.address_detail like concat('%', #{pQuery.keyword}, '%')
                )
            </if>


            <!--            <if test="pQuery.layout != null and !pQuery.layout.isEmpty()">-->
            <!--                and house.layout in-->
            <!--                <foreach item="roomNum" collection="pQuery.layout" open="(" separator="," close=")">-->
            <!--                    #{roomNum}-->
            <!--                </foreach>-->
            <!--            </if>-->

            <!-- 方案二：逻辑分离型写法 (您的思路) -->
            <if test="pQuery.layout != null and !pQuery.layout.isEmpty()">
                and
                <trim prefix="(" suffix=")" prefixOverrides="OR">
                    <!-- 第一部分：处理所有不等于4的精确匹配 -->
                    <foreach item="roomNum" collection="pQuery.layout">
                        <if test="roomNum != 4">
                            OR house.layout = #{roomNum}
                        </if>
                    </foreach>

                    <!-- 第二部分：单独处理“4居及以上”的情况 -->
                    <!-- OGNL表达式 pQuery.layout.contains(4) 判断列表是否包含元素4 -->
                    <if test="pQuery.layout.contains(4)">
                        OR house.layout >= 4
                    </if>
                </trim>
            </if>
            <if test="pQuery.minRent != null and pQuery.maxRent != null">
                and house.price_per_month between #{pQuery.minRent} and #{pQuery.maxRent}
            </if>
            <if test="pQuery.minRent == null and pQuery.maxRent != null">
                and house.price_per_month <![CDATA[<=]]> #{pQuery.maxRent}
            </if>
        </where>
        <choose>
            <!-- 当客户端明确要求升序时 -->
            <!--            <when test="pQuery.sorted != null and 'asc'.equalsIgnoreCase(pQuery.sorted)">-->
            <!--                &lt;!&ndash;@ignoreSql&ndash;&gt;-->
            <!--                ORDER BY house.updated_at ,house.id ASC-->
            <!--            </when>-->
            <!-- 当客户端明确要求按 价格 升序 -->
            <when test="pQuery.sorted != null and 'price_asc'.equalsIgnoreCase(pQuery.sorted)">
                <!--@ignoreSql-->
                ORDER BY house.price_per_month ASC, house.id DESC
            </when>
            <!-- 当客户端明确要求 按 租金降序-->
            <when test="pQuery.sorted != null and 'price_desc'.equalsIgnoreCase(pQuery.sorted)">
                <!--@ignoreSql-->
                ORDER BY house.price_per_month DESC, house.id DESC
            </when>
            <!-- 当客户端明确要求按 面积 升序 -->
            <when test="pQuery.sorted != null and 'area_asc'.equalsIgnoreCase(pQuery.sorted)">
                <!--@ignoreSql-->
                ORDER BY house.area ASC, house.id DESC
            </when>
            <!-- 当客户端明确要求 按 面积降序-->
            <when test="pQuery.sorted != null and 'area_desc'.equalsIgnoreCase(pQuery.sorted)">
                <!--@ignoreSql-->
                ORDER BY house.area DESC,house.id desc
            </when>
            <!-- 其他所有情况（包括 sorted 为 null, 'desc', 或其他任何值），都默认按时间倒序 -->
            <otherwise>
                ORDER BY house.updated_at DESC,house.id DESC
            </otherwise>
        </choose>
    </select>

    <select id="findTopPriceHouseInEachRegion" resultType="renthub.domain.vo.TopHouseVO">
        WITH RankedHouses AS (SELECT h.id,
                                     h.title,
                                     h.image,
                                     h.region_name,
                                     h.price_per_month,
                                     ROW_NUMBER() OVER (PARTITION BY h.region_id ORDER BY h.price_per_month DESC) AS rn
                              FROM house h
                              WHERE h.status = 1)
        SELECT id,
               title,
               image,
               region_name     AS regionName,
               price_per_month AS pricePerMonth
        FROM RankedHouses
        WHERE rn = 1
        ORDER BY pricePerMonth DESC
    </select>

    <update id="updateHouseWithoutTag">
        update house
        <set>
            <if test="image != null and image!=''">
                image = #{image},
            </if>
            <if test="title != null and title!=''">
                title = #{title},
            </if>
            <if test="regionId != null">
                regionId = #{regionId},
            </if>
            <if test="addressDetail != addressDetail and addressDetail != ''">
                addressDetail = #{addressDetail},
            </if>
            <if test="pricePerMonth != null">
                pricePerMonth = #{pricePerMonth},
            </if>
            <if test="area != null">
                area = #{area},
            </if>
            <if test="layout != null">
                layout = #{layout},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            updated_at = NOW()
        </set>
        where id=#{houseId}
    </update>

    <select id="selectByIdForUpdate" resultType="renthub.domain.po.House">
        SELECT *
        FROM house
        WHERE id = #{id}
            FOR
        UPDATE
    </select>

</mapper>
